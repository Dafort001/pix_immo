# ============================================================================
# PIX.IMMO & PIXCAPTURE - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# ENVIRONMENT & DEPLOYMENT
# ----------------------------------------------------------------------------

# Application environment: development, staging, production
NODE_ENV=development

# Frontend environment (for conditional features)
VITE_ENV=development

# Server port (default: 5000)
PORT=5000

# Base URL for the application (used for email links, webhooks, etc.)
BASE_URL=http://localhost:5000

# Production URL (used for CORS in production)
PRODUCTION_URL=https://pix.immo

# Replit deployment domains (auto-filled by Replit)
# REPLIT_DOMAINS=
# REPL_SLUG=
# REPL_OWNER=

# ----------------------------------------------------------------------------
# DATABASE (PostgreSQL/Neon)
# ----------------------------------------------------------------------------

# PostgreSQL connection string (Neon)
DATABASE_URL=postgresql://user:password@host:5432/database

# Alternative separate credentials (auto-filled by Replit)
# PGHOST=
# PGPORT=5432
# PGUSER=
# PGPASSWORD=
# PGDATABASE=

# ----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# ----------------------------------------------------------------------------

# Session secret (min 32 characters, use: openssl rand -base64 32)
SESSION_SECRET=your-secure-session-secret-min-32-chars

# JWT secret for token-based auth (min 32 characters)
JWT_SECRET=your-secure-jwt-secret-min-32-chars

# ----------------------------------------------------------------------------
# PAYMENT (Stripe)
# ----------------------------------------------------------------------------

# Production Stripe keys
STRIPE_SECRET_KEY=sk_live_...
VITE_STRIPE_PUBLIC_KEY=pk_live_...

# Testing Stripe keys (for local development)
TESTING_STRIPE_SECRET_KEY=sk_test_...
TESTING_VITE_STRIPE_PUBLIC_KEY=pk_test_...

# ----------------------------------------------------------------------------
# EMAIL (Resend)
# ----------------------------------------------------------------------------

# Resend API key for transactional emails
RESEND_API_KEY=re_...

# ----------------------------------------------------------------------------
# OBJECT STORAGE (Cloudflare R2)
# ----------------------------------------------------------------------------

# Cloudflare R2 credentials
CF_R2_ACCOUNT_ID=your-account-id
CF_R2_ACCESS_KEY=your-access-key
CF_R2_SECRET_KEY=your-secret-key
CF_R2_BUCKET=your-bucket-name
CF_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Default object storage bucket ID (Replit Object Storage)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=

# Private/Public object directories (auto-configured)
PRIVATE_OBJECT_DIR=.private
PUBLIC_OBJECT_SEARCH_PATHS=public

# ----------------------------------------------------------------------------
# AI SERVICES
# ----------------------------------------------------------------------------

# AI Provider Selection
AI_IMAGE_PROVIDER=replicate  # Options: replicate, clipdrop
AI_TEXT_PROVIDER=openai      # Options: openai

# Replicate (Image processing: upscaling, denoise, background removal)
REPLICATE_API_TOKEN=r8_...

# Clipdrop (Alternative image processing)
CLIPDROP_API_KEY=...

# OpenAI (GPT-4 Vision for image captions, text generation)
OPENAI_API_KEY=sk-...

# ----------------------------------------------------------------------------
# EXTERNAL SERVICES
# ----------------------------------------------------------------------------

# Google Maps API (for address autocomplete, thumbnails)
GOOGLE_MAPS_API_KEY=AIza...

# TidyCal (Appointment booking integration)
TIDYCAL_API_KEY=...
TIDYCAL_WEBHOOK_URL=...

# ----------------------------------------------------------------------------
# FRONTEND CONFIGURATION (VITE_* variables are exposed to client)
# ----------------------------------------------------------------------------

# API base URL for frontend (optional, defaults to same origin)
# VITE_API_URL=https://api.pix.immo

# ============================================================================
# NOTES
# ============================================================================
#
# REQUIRED FOR BASIC FUNCTIONALITY:
# - DATABASE_URL
# - SESSION_SECRET
# - JWT_SECRET
#
# REQUIRED FOR FULL FEATURES:
# - CF_R2_* (for image uploads)
# - RESEND_API_KEY (for emails)
# - GOOGLE_MAPS_API_KEY (for address autocomplete)
# - STRIPE_SECRET_KEY (for payments)
#
# OPTIONAL BUT RECOMMENDED:
# - AI provider keys (for image processing)
# - TIDYCAL_* (for appointment booking)
#
# STAGING DEPLOYMENT:
# Set VITE_ENV=staging to enable staging-specific features
# and disable search engine indexing
#
# ============================================================================
